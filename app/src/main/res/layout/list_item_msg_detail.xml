<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginTop="5dp"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <ImageView
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@mipmap/msg_icon"/>

            <TextView
                android:id="@+id/tv_item_msg_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="消息通知"
                android:textSize="16dp"
                android:textColor="@color/text_color_black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_bg"/>
        <TextView
            android:id="@+id/tv_item_msg_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:text="2017.07.24  19:37:41"/>
        <LinearLayout
            android:layout_margin="20dp"
            android:background="@drawable/btn_shape4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_item_msg_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="消息通知消息通知消消息通知息通知消息通消息通知消息通知消息通知消息通知消息通知消息通知消息通知消息通消息通知消息通知消息通知消息通知消息通知消息通知消息通知消息通消息通知消息通知消息通知消息通知消息通知消息通知消息通知消息通 "/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<com.hdyg.zhimaqb.util.RevealLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/layout_list_item_bill"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_marginTop="1dp"
    android:gravity="center_vertical"
    android:layout_height="60dp">


    <LinearLayout
        android:gravity="center_vertical"
        android:layout_marginLeft="20dp"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="6"
        android:layout_height="match_parent">
        <LinearLayout
            android:gravity=""
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_bill_list_type"
                android:layout_width="1dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="类型"
                android:textColor="@color/text_color_black"
                />

            <TextView
                android:layout_marginRight="20dp"
                android:id="@+id/tv_bill_list_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1000"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_bill_list_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="201111111"
                android:textColor="@color/text_color_black"
                />
        </LinearLayout>


    </LinearLayout>

</com.hdyg.zhimaqb.util.RevealLayout>
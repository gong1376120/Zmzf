<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="@drawable/btn_shape"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="1dp"
    android:layout_marginRight="1dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:background="@drawable/img_shape_yuanxing_green"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_width="50dp"
        android:layout_height="50dp">
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/info_item_img"
            android:src="@mipmap/bill_white"
            android:layout_width="match_parent"
            android:layout_height="35dp" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginRight="15dp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="10.5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/info_item_top_content"
                android:textSize="14dp"
                android:textColor="@color/text_color_black"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="系统通知"/>
            <TextView
                android:id="@+id/info_item_time"
                android:textSize="12dp"
                android:textColor="@color/text_color_gray"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:text="2017.06.08"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="15.5dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="19.5dp"
            android:layout_marginLeft="10.5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/info_item_content"
                android:maxEms="12"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/green"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="尊敬的客户：您好！！！！！！！！！！！！"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
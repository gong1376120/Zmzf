<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/top_bar_layout"/>
    <!--修改密码-->
    <com.hdyg.zhimaqb.util.RevealLayout
        android:id="@+id/update_pwd"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="10dp">
        <ImageView
            android:layout_marginLeft="15dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:src="@mipmap/lock"/>
        <TextView
            android:layout_weight="5"
            android:textColor="@color/text_color_black"
            android:textSize="16dp"
            android:layout_marginLeft="5dp"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:gravity="center|left"
            android:text="修改密码"/>
        <LinearLayout
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center|right"
            android:layout_height="44dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:src="@mipmap/right_gray"/>
        </LinearLayout>
    </com.hdyg.zhimaqb.util.RevealLayout>
    <LinearLayout
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/view_color"/>
    <!--推送通知-->
    <com.hdyg.zhimaqb.util.RevealLayout
        android:id="@+id/tuisong_ll"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="10dp">
        <ImageView
            android:layout_marginLeft="15dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:src="@mipmap/bell"/>
        <TextView
            android:layout_weight="5"
            android:textColor="@color/text_color_black"
            android:textSize="16dp"
            android:layout_marginLeft="5dp"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:gravity="center|left"
            android:text="推送通知"/>
        <LinearLayout
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center|right"
            android:layout_height="44dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:src="@mipmap/right_gray"/>
        </LinearLayout>
    </com.hdyg.zhimaqb.util.RevealLayout>
    <LinearLayout
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/view_color"/>
<!--清除缓存-->
    <com.hdyg.zhimaqb.util.RevealLayout
        android:id="@+id/clear_huancun_ll"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="4dp">
        <ImageView
            android:layout_marginLeft="15dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:src="@mipmap/trash"/>
        <TextView
            android:layout_weight="1"
            android:textColor="@color/text_color_black"
            android:textSize="16dp"
            android:layout_marginLeft="5dp"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:gravity="center|left"
            android:text="清除缓存"/>
        <LinearLayout
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="right"
            android:layout_height="44dp">
            <TextView
                android:id="@+id/huancun_number_tv"
                android:textColor="@color/text_color_gray"
                android:textSize="14dp"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:gravity="center"
                android:text="0.00K"/>
            <!--<TextView-->
                <!--android:textColor="@color/text_color_gray"-->
                <!--android:textSize="14dp"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="44dp"-->
                <!--android:gravity="center"-->
                <!--android:text="  MB"/>-->
        </LinearLayout>
    </com.hdyg.zhimaqb.util.RevealLayout>
    <LinearLayout
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/view_color"/>
<!--退出登录-->
    <com.hdyg.zhimaqb.util.RevealLayout
        android:id="@+id/log_off_ll"
        android:background="@color/main_color"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center"
        android:layout_marginTop="20dp">
        <TextView
            android:textColor="@color/white"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:gravity="center"
            android:text="退出登录"/>
    </com.hdyg.zhimaqb.util.RevealLayout>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_color">
    <include layout="@layout/top_bar_layout"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:background="@drawable/btn_shape"
            android:layout_marginTop="19dp"
            android:layout_marginLeft="26.5dp"
            android:layout_marginRight="26.5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:background="@drawable/btn_shape2"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <EditText
                    android:id="@+id/regist_phone"
                    android:inputType="phone"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/text_color_gray"
                    android:textSize="14dp"
                    android:hint="输入手机号"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:background="@drawable/btn_shape2"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="26.5dp"
            android:layout_marginRight="26.5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:background="@drawable/btn_shape2"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="40dp">
                <EditText
                    android:id="@+id/regist_code"
                    android:inputType="number"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/text_color_gray"
                    android:textSize="14dp"
                    android:hint="输入验证码"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />
            </LinearLayout>
            <com.hdyg.zhimaqb.util.RevealLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="40dp">
                <Button
                    android:id="@+id/send_code_btn"
                    android:background="@drawable/btn_shape_green"
                    android:textSize="17dp"
                    android:textColor="@color/white"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:text="发送验证码"/>
            </com.hdyg.zhimaqb.util.RevealLayout>
        </LinearLayout>

        <LinearLayout
            android:background="@drawable/btn_shape2"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="26.5dp"
            android:layout_marginRight="26.5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/regist_pwd"
                android:inputType="textPassword"
                android:layout_marginLeft="15dp"
                android:textColor="@color/text_color_gray"
                android:textSize="14dp"
                android:hint="输入新密码"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="40dp" />
        </LinearLayout>

        <LinearLayout
        android:background="@drawable/btn_shape2"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="26.5dp"
        android:layout_marginRight="26.5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/regist_pwd2"
            android:inputType="textPassword"
            android:layout_marginLeft="15dp"
            android:textColor="@color/text_color_gray"
            android:textSize="14dp"
            android:hint="重新输入密码"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/invite_ll"
            android:background="@drawable/btn_shape2"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="26.5dp"
            android:layout_marginRight="26.5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/regist_invite_phone"
                android:inputType="number"
                android:layout_marginLeft="15dp"
                android:textColor="@color/text_color_gray"
                android:textSize="14dp"
                android:hint="输入邀请人账号"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="40dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/agree_regist_ll"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="26.5dp"
            android:layout_marginRight="26.5dp"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <LinearLayout
                android:background="@drawable/btn_shape2"
                android:layout_gravity="center"
                android:layout_width="25dp"
                android:layout_height="25dp">
                <ImageView
                    android:id="@+id/agree_iv"
                    android:layout_gravity="center"
                    android:layout_width="25dp"
                    android:layout_height="25dp" />
            </LinearLayout>
            <TextView
                android:id="@+id/userreg_tv"
                android:gravity="center"
                android:textSize="14dp"
                android:textColor="@color/text_color_green"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="我已同意用户使用协议"/>
        </LinearLayout>

        <com.hdyg.zhimaqb.util.RevealLayout
            android:layout_marginTop="10dp"
            android:layout_marginLeft="26.5dp"
            android:layout_marginRight="26.5dp"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <Button
                android:id="@+id/regist_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="17dp"
                android:background="@drawable/btn_shape_green"
                android:text="完成注册"/>
        </com.hdyg.zhimaqb.util.RevealLayout>

    </LinearLayout>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ka_tu"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/xingyecard5" />

    <TextView
        android:id="@+id/title_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/ka_tu"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/ka_tu"
        android:text="兴业倩女幽魂金卡CP版"
        android:textColor="#f00"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/card_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_card"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="0dp"
        android:layout_toRightOf="@id/ka_tu"
        android:text="1、核卡60日内满足限定交易,赠豪华游戏\n礼包(不再参加同期新户首刷活动)。\n2、网购笔笔计积分；赠200万航意险。\n3、首年免年费；限定交易满5次免次年年费。\n4、限量版共1万张，先到先得（以核卡时间为准）。\n5、此卡为兴业银行PASS信用卡。\n6、更多内容请至兴业银行信用卡官方网站查询。"
        android:textSize="10sp" />

    <ImageView
        android:id="@+id/ka11_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:src="@mipmap/lijishenqing" />
</RelativeLayout>
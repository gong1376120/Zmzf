<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/bg_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/top_bar_layout"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginLeft="12dp"
                    android:textSize="12dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/text_color_black"
                    android:text="请绑定本人名下的银行卡（均加密保存，仅用于银行认证）"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/tixian_1"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="44dp">
                <TextView
                    android:layout_marginLeft="12dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:textSize="14dp"
                    android:gravity="center|left"
                    android:textColor="@color/text_color_black"
                    android:text="身份证"/>
                <EditText
                    android:background="@null"
                    android:id="@+id/idcard_num"
                    android:layout_weight="5"
                    android:layout_width="0dp"
                    android:inputType="text"
                    android:padding="12dp"
                    android:gravity="right|center"
                    android:textSize="12dp"
                    android:hint="请输入身份证号码"
                    android:textColor="@color/text_color_black"
                    android:layout_height="44dp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/tixian_2"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_marginTop="1dp"
                android:layout_height="44dp">
                <TextView
                    android:layout_marginLeft="12dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:textSize="14dp"
                    android:gravity="center|left"
                    android:textColor="@color/text_color_black"
                    android:text="持卡人"/>
                <EditText
                    android:id="@+id/idcard_name"
                    android:layout_weight="5"
                    android:layout_width="0dp"
                    android:background="@null"
                    android:padding="12dp"
                    android:gravity="right|center"
                    android:textSize="12dp"
                    android:hint="姓名"
                    android:inputType="text"
                    android:textColor="@color/text_color_black"
                    android:layout_height="44dp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/tixian_3"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_marginTop="1dp"
                android:layout_height="44dp">
                <TextView
                    android:layout_marginLeft="12dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:textSize="14dp"
                    android:gravity="center"
                    android:textColor="@color/text_color_black"
                    android:text="所属银行"/>
                <LinearLayout
                    android:id="@+id/bank_name_ll"
                    android:layout_weight="5"
                    android:layout_width="0dp"
                    android:layout_height="44dp">
                    <TextView
                        android:id="@+id/bank_name_tv"
                        android:layout_weight="10"
                        android:layout_width="wrap_content"
                        android:background="@color/white"
                        android:padding="12dp"
                        android:gravity="right|center"
                        android:textSize="12dp"
                        android:textColor="@color/text_color_black"
                        android:layout_height="44dp" />
                    <ImageView
                        android:id="@+id/bank_name_iv"
                        android:background="@color/white"
                        android:layout_width="wrap_content"
                        android:src="@mipmap/down"
                        android:padding="12dp"
                        android:layout_height="44dp" />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/tixian_4"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_marginTop="1dp"
                android:layout_height="44dp">
                <TextView
                    android:layout_marginLeft="12dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:textSize="14dp"
                    android:gravity="center|left"
                    android:textColor="@color/text_color_black"
                    android:text="银行卡"/>
                <EditText
                    android:id="@+id/bank_card_num"
                    android:layout_weight="5"
                    android:layout_width="0dp"
                    android:background="@null"
                    android:padding="12dp"
                    android:gravity="right|center"
                    android:textSize="12dp"
                    android:inputType="number"
                    android:hint="银行卡卡号"
                    android:textColor="@color/text_color_black"
                    android:layout_height="44dp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/tixian_5"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_marginTop="1dp"
                android:layout_height="44dp">
                <TextView
                    android:layout_weight="1"
                    android:layout_marginLeft="12dp"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:textSize="14dp"
                    android:gravity="center|left"
                    android:textColor="@color/text_color_black"
                    android:text="地区"/>
                <LinearLayout
                    android:id="@+id/bank_address_ll"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="5">
                    <TextView
                        android:id="@+id/bank_address_et"
                        android:layout_weight="10"
                        android:layout_width="wrap_content"
                        android:background="@color/white"
                        android:padding="12dp"
                        android:gravity="right|center"
                        android:textSize="12dp"
                        android:hint="开户行所在省和城市"
                        android:textColor="@color/text_color_black"
                        android:layout_height="44dp" />
                    <ImageView
                        android:id="@+id/bank_address_iv"
                        android:background="@color/white"
                        android:layout_width="wrap_content"
                        android:src="@mipmap/down"
                        android:padding="12dp"
                        android:layout_height="44dp" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/tixian_6"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_marginTop="1dp"
                android:layout_height="44dp">
                <TextView
                    android:layout_marginLeft="12dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:textSize="14dp"
                    android:gravity="center|left"
                    android:textColor="@color/text_color_black"
                    android:text="开户行"/>
                <TextView
                    android:id="@+id/bank_name_et"
                    android:layout_weight="5"
                    android:layout_width="0dp"
                    android:background="@null"
                    android:padding="12dp"
                    android:gravity="right|center"
                    android:textSize="12dp"
                    android:inputType="text"
                    android:hint="请输入开户行(如集美支行)"
                    android:textColor="@color/text_color_black"
                    android:layout_height="44dp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/tixian_7"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_marginTop="1dp"
                android:layout_height="44dp">
                <TextView
                    android:layout_marginLeft="12dp"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:textSize="14dp"
                    android:gravity="center|left"
                    android:textColor="@color/text_color_black"
                    android:text="银行预留手机"/>
                <EditText
                    android:id="@+id/phone"
                    android:inputType="phone"
                    android:layout_weight="10"
                    android:layout_width="wrap_content"
                    android:background="@null"
                    android:padding="12dp"
                    android:gravity="right|center"
                    android:textSize="12dp"
                    android:hint="手机号"
                    android:textColor="@color/text_color_black"
                    android:layout_height="44dp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/tixian_8"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_width="match_parent"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:layout_height="44dp">
                <TextView
                    android:layout_marginLeft="12dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:background="@color/white"
                    android:padding="6dp"
                    android:textSize="14dp"
                    android:gravity="center|left"
                    android:textColor="@color/text_color_black"
                    android:text="验证码"/>
                <EditText
                    android:id="@+id/yanzhengma"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:background="@null"
                    android:padding="12dp"
                    android:textSize="12dp"
                    android:hint="输入验证码"
                    android:inputType="phone"
                    android:textColor="@color/text_color_black"
                    android:layout_height="44dp" />
                <com.hdyg.zhimaqb.util.RevealLayout
                    android:layout_weight="2"
                    android:layout_marginRight="12dp"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="44dp">
                    <Button
                        android:id="@+id/getcode_btn"
                        android:background="@drawable/btn_shape_green"
                        android:textSize="14dp"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="获取验证码"/>
                </com.hdyg.zhimaqb.util.RevealLayout>
            </LinearLayout>
            <com.hdyg.zhimaqb.util.RevealLayout
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/next_page"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@drawable/btn_shape_green"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:text="提交"/>
            </com.hdyg.zhimaqb.util.RevealLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
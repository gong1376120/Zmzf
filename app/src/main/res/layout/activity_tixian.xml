<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    android:orientation="vertical">

    <include layout="@layout/top_bar_layout"/>

    <com.hdyg.zhimaqb.ui.MyScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="52dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginLeft="12dp"
                    android:gravity="center_vertical"
                    android:text="请绑定本人名下的银行卡（均加密保存，仅用于银行认证）"
                    android:textColor="@color/text_color_black"
                    android:textSize="13dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/tixian_1"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="52dp"
                    android:layout_marginLeft="12dp"
                    android:gravity="center|left"
                    android:text="身份证"
                    android:textColor="@color/text_color_black"
                    android:textSize="16dp"/>

                <EditText
                    android:id="@+id/idcard_num"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_weight="5"
                    android:background="@null"
                    android:gravity="right|center"
                    android:hint="请输入身份证号码"
                    android:inputType="text"
                    android:padding="12dp"
                    android:textColor="@color/text_color_black"
                    android:textSize="15dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tixian_2"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="1dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="52dp"
                    android:layout_marginLeft="12dp"
                    android:gravity="center|left"
                    android:text="持卡人"
                    android:textColor="@color/text_color_black"
                    android:textSize="16dp"/>

                <EditText
                    android:id="@+id/idcard_name"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_weight="5"
                    android:background="@null"
                    android:gravity="right|center"
                    android:hint="姓名"
                    android:inputType="text"
                    android:padding="12dp"
                    android:textColor="@color/text_color_black"
                    android:textSize="15dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tixian_3"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="1dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="52dp"
                    android:layout_marginLeft="12dp"
                    android:gravity="center_vertical"
                    android:text="所属银行"
                    android:textColor="@color/text_color_black"
                    android:textSize="16dp"/>

                <LinearLayout
                    android:id="@+id/bank_name_ll"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_weight="5">

                    <TextView
                        android:id="@+id/bank_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="52dp"
                        android:layout_weight="10"
                        android:background="@color/white"
                        android:gravity="right|center"
                        android:padding="12dp"
                        android:textColor="@color/text_color_black"
                        android:textSize="15dp"/>

                    <ImageView
                        android:id="@+id/bank_name_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="52dp"
                        android:background="@color/white"
                        android:padding="12dp"
                        android:src="@mipmap/down"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/tixian_4"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="1dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="52dp"
                    android:layout_marginLeft="12dp"

                    android:gravity="center|left"
                    android:text="银行卡"
                    android:textColor="@color/text_color_black"
                    android:textSize="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="52dp"
                    android:layout_marginLeft="4dp"
                    android:gravity="center|left"
                    android:text="(储蓄卡)"
                    android:textColor="@color/main_color"
                    android:textSize="16dp"/>

                <EditText
                    android:id="@+id/bank_card_num"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_weight="5"
                    android:background="@null"
                    android:gravity="right|center"
                    android:hint="银行卡卡号"
                    android:inputType="number"
                    android:padding="12dp"
                    android:textColor="@color/text_color_black"
                    android:textSize="15dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tixian_5"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="1dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="52dp"
                    android:layout_marginLeft="12dp"
                    android:gravity="center|left"
                    android:text="地区"
                    android:textColor="@color/text_color_black"
                    android:textSize="16dp"/>

                <LinearLayout
                    android:id="@+id/bank_address_ll"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_weight="5">

                    <TextView
                        android:id="@+id/bank_address_et"
                        android:layout_width="wrap_content"
                        android:layout_height="52dp"
                        android:layout_weight="10"
                        android:background="@color/white"
                        android:gravity="right|center"
                        android:hint="开户行所在省和城市"
                        android:padding="12dp"
                        android:textColor="@color/text_color_black"
                        android:textSize="15dp"/>

                    <ImageView
                        android:id="@+id/bank_address_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="52dp"
                        android:background="@color/white"
                        android:padding="12dp"
                        android:src="@mipmap/down"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tixian_6"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="1dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="52dp"
                    android:layout_marginLeft="12dp"
                    android:gravity="center|left"
                    android:text="开户行"
                    android:textColor="@color/text_color_black"
                    android:textSize="16dp"/>

                <TextView
                    android:id="@+id/bank_name_et"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_weight="5"
                    android:background="@null"
                    android:gravity="right|center"
                    android:hint="请输入开户行(如集美支行)"
                    android:inputType="text"
                    android:padding="12dp"
                    android:textColor="@color/text_color_black"
                    android:textSize="15dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tixian_7"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="1dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="52dp"
                    android:layout_marginLeft="12dp"
                    android:gravity="center|left"
                    android:text="银行预留手机"
                    android:textColor="@color/text_color_black"
                    android:textSize="16dp"/>

                <EditText
                    android:id="@+id/phone"
                    android:layout_width="wrap_content"
                    android:layout_height="52dp"
                    android:layout_weight="10"
                    android:background="@null"
                    android:gravity="right|center"
                    android:hint="手机号"
                    android:inputType="phone"
                    android:padding="12dp"
                    android:textColor="@color/text_color_black"
                    android:textSize="15dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tixian_8"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:focusable="true"
                android:focusableInTouchMode="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="52dp"
                    android:layout_marginLeft="12dp"
                    android:background="@color/white"
                    android:gravity="center|left"
                    android:text="验证码"
                    android:textColor="@color/text_color_black"
                    android:textSize="16dp"/>

                <EditText
                    android:id="@+id/yanzhengma"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_weight="3"
                    android:background="@null"
                    android:hint="输入验证码"
                    android:inputType="phone"
                    android:padding="12dp"
                    android:textColor="@color/text_color_black"
                    android:textSize="15dp"/>

                <com.hdyg.zhimaqb.util.RevealLayout
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_marginRight="12dp"
                    android:layout_weight="2"
                    android:gravity="center">

                    <Button
                        android:id="@+id/getcode_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:background="@drawable/btn_shape_green"
                        android:text="获取验证码"
                        android:textColor="@color/white"
                        android:textSize="14dp"/>
                </com.hdyg.zhimaqb.util.RevealLayout>
            </LinearLayout>

            <com.hdyg.zhimaqb.util.RevealLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp">

                <Button
                    android:id="@+id/next_page"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:background="@drawable/btn_shape_green"
                    android:text="提交"
                    android:textColor="@color/white"
                    android:textSize="18dp"/>
            </com.hdyg.zhimaqb.util.RevealLayout>
        </LinearLayout>
    </com.hdyg.zhimaqb.ui.MyScrollView>

</LinearLayout>
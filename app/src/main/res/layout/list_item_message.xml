<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginTop="2dp"
    android:background="@drawable/btn_shape3">

    <com.hdyg.zhimaqb.util.RevealLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_item_message"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/btn_shape"
            android:layout_gravity="center"
            android:src="@mipmap/short_message_nor"
            android:layout_marginLeft="20dp"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="27dp"
            android:gravity="center|left">
            <TextView
                android:id="@+id/tv_item_msg_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="@color/text_color_black"
                android:text="消息中心"/>
            <TextView
                android:visibility="gone"
                android:id="@+id/tv_item_msg_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="您已通过实名认证"
                android:layout_marginRight="20dp"
                android:maxLines="1"
                android:textColor="#888888"
                android:textSize="14dp"/>
        </LinearLayout>
    </com.hdyg.zhimaqb.util.RevealLayout>

</LinearLayout>
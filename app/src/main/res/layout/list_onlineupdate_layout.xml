<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!--钻石会员-->
    <LinearLayout
        android:id="@+id/online_update_dia"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/btn_shape_20dp"
        android:layout_width="match_parent"
        android:layout_height="170dp">
        <LinearLayout
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="3"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/online_logo_img"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/jin_3x"/>
                <TextView
                    android:id="@+id/online_top"
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="钻石会员"
                    android:textSize="20dp"
                    android:textColor="@color/text_color_black"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="7"
                android:orientation="vertical"
                android:gravity="center|left"
                android:layout_marginLeft="20dp"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/online_content_1_1"
                    android:textColor="@color/text_color_black"
                    android:textSize="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="充值398元"/>
                <TextView
                    android:id="@+id/online_content_1"
                    android:textColor="@color/text_color_black"
                    android:textSize="14dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="享刷卡扣率为0.28-0.32"/>
                <TextView
                    android:id="@+id/online_content_2"
                    android:textColor="@color/text_color_black"
                    android:textSize="14dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="享推广会员刷卡扣率差"/>
                <TextView
                    android:id="@+id/online_content_3"
                    android:textColor="@color/text_color_black"
                    android:textSize="14dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="享3级分享奖励"/>
            </LinearLayout>
            <!--<LinearLayout-->
                <!--android:layout_weight="1"-->
                <!--android:gravity="center|right"-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="match_parent">-->
                <!--<ImageView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:src="@mipmap/right_gray"/>-->
            <!--</LinearLayout>-->
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
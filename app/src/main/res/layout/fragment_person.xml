<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    android:orientation="vertical">

    <include layout="@layout/top_bar_layout"/>


    <com.hdyg.zhimaqb.ui.MyScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@color/color_line"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:background="@color/color_white">

                <com.hdyg.zhimaqb.ui.CircleImageView
                    android:id="@+id/civ_head"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:src="@mipmap/me_head"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/civ_head"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="芝麻等级"
                        android:textColor="@color/text_color_black"
                        android:textSize="18dp"
                        />

                    <TextView
                        android:id="@+id/tv_level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/tv_name"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/tv_name"
                        android:text="芝麻付"
                        android:textColor="@color/text_color_black"
                        android:textSize="14dp"
                        />

                    <TextView
                        android:id="@+id/tv_tel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_name"
                        android:layout_marginTop="10dp"
                        android:text="账号：1234679895"
                        android:textColor="@color/text_color_black"
                        android:textSize="14dp"
                        />
                </RelativeLayout>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_line"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="6dp"
                android:background="@color/color_line"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:orientation="horizontal"

                >

                <LinearLayout
                    android:id="@+id/ll_school"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/click_ripple"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@mipmap/me_school"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="我的芝麻学院"
                        android:textColor="#287fd8"
                        android:textSize="14dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_message"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/click_ripple"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@mipmap/me_message"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="我的消息"
                        android:textColor="#22ab32"
                        android:textSize="14dp"
                        />

                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_line"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="6dp"
                android:background="@color/color_line"/>

            <RelativeLayout
                android:id="@+id/rl_referee"
                style="@style/ItemLayout"
                >

                <ImageView
                    style="@style/ItemImageView"
                    android:src="@mipmap/me_tuijianren"
                    />

                <TextView
                    style="@style/ItemTextView"
                    android:text="推荐人"
                    />

                <TextView
                    android:id="@+id/tv_referee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="22dp"
                    android:textColor="@color/text_color_gray"
                    android:textSize="14dp"
                    />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_line"/>

            <RelativeLayout
                android:id="@+id/rl_authentication"
                style="@style/ItemLayout"
                >

                <ImageView
                    style="@style/ItemImageView"
                    android:src="@mipmap/me_authentication"
                    />

                <TextView
                    style="@style/ItemTextView"
                    android:text="我的认证"
                    />

                <TextView
                    android:id="@+id/tv_id_authen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="45dp"
                    android:text="未认证"
                    android:textColor="@color/text_color_gray"
                    android:textSize="14dp"
                    />

                <ImageView
                    style="@style/ItemBackView"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_line"/>

            <RelativeLayout
                android:id="@+id/rl_card"
                style="@style/ItemLayout"
                >

                <ImageView
                    style="@style/ItemImageView"
                    android:src="@mipmap/me_card"
                    />

                <TextView
                    style="@style/ItemTextView"
                    android:text="我的银行卡"/>

                <TextView
                    android:id="@+id/tv_card_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="45dp"
                    android:text="已绑定"
                    android:textColor="@color/text_color_gray"
                    android:textSize="14dp"
                    />

                <ImageView
                    style="@style/ItemBackView"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_line"/>

            <RelativeLayout
                android:id="@+id/rl_rate"
                style="@style/ItemLayout"
                android:visibility="gone"
                >

                <ImageView
                    style="@style/ItemImageView"
                    android:src="@mipmap/me_rate"
                    />

                <TextView
                    style="@style/ItemTextView"
                    android:text="费率说明"
                    />


                <ImageView
                    style="@style/ItemBackView"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_line"
                android:visibility="gone"/>

            <RelativeLayout
                android:id="@+id/rl_tel_service"
                style="@style/ItemLayout"
                >

                <ImageView
                    style="@style/ItemImageView"
                    android:src="@mipmap/me_tel_service"
                    />

                <TextView
                    style="@style/ItemTextView"
                    android:text="我的客服"
                    />


                <ImageView
                    style="@style/ItemBackView"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_line"/>

            <RelativeLayout
                android:id="@+id/rl_about_us"
                style="@style/ItemLayout"
                >

                <ImageView
                    style="@style/ItemImageView"
                    android:src="@mipmap/me_about_us"
                    />

                <TextView
                    style="@style/ItemTextView"
                    android:text="关于我们"
                    />


                <ImageView
                    style="@style/ItemBackView"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_line"/>

            <RelativeLayout
                android:id="@+id/rl_suggest"
                style="@style/ItemLayout"
                >

                <ImageView
                    style="@style/ItemImageView"
                    android:src="@mipmap/me_suggest"
                    />

                <TextView
                    style="@style/ItemTextView"
                    android:text="意见反馈"

                    />


                <ImageView
                    style="@style/ItemBackView"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_line"/>

            <RelativeLayout
                android:id="@+id/rl_setting"
                style="@style/ItemLayout"
                >

                <ImageView
                    style="@style/ItemImageView"
                    android:src="@mipmap/me_setting"
                    />

                <TextView
                    style="@style/ItemTextView"
                    android:text="更多设置"
                    />

                <ImageView
                    style="@style/ItemBackView"/>
            </RelativeLayout>
        </LinearLayout>
    </com.hdyg.zhimaqb.ui.MyScrollView>


</LinearLayout>